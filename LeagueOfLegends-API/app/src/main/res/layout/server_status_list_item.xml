<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:style="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ff8f00"
    android:orientation="horizontal"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/status_circle"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/status_circle_xml"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@id/status_circle"
        android:paddingLeft="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/region_tag"
            style="@style/ListItemTextView"
            android:layout_gravity="center_vertical"
            android:gravity="start"
            android:textColor="@color/list_item_text_color1"
            tools:text="br1 - Brazil" />

        <TextView
            android:id="@+id/server_application"
            style="@style/ListItemTextView"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:textColor="@color/list_item_text_color1"
            tools:text="Game" />
    </LinearLayout>

    <TextView
        android:id="@+id/message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="4"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:layout_below="@id/status_circle"
        android:textSize="14sp"
        tools:text="teste" />
</RelativeLayout>